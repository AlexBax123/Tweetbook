@page
@model Tweetbook.Razor.Pages.Posts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.UserId)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post.Tags.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post.Tags.FirstOrDefault().Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post.Tags) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
        <div>
            @foreach (var item in Model.Errors)
            {
                <p>@item</p>
            }
        </div>